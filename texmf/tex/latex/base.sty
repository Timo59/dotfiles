		\newcommand*{\id}{I} 						% Identity operator
		\newcommand*{\linear}[1]{\mathcal{L}(#1)}		% Linear operators
		\newcommand*{\bounded}[1]{\mathcal{B}(#1)} 		% Bounded linear operators
